{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["next"],
    "typeRoots": ["./types"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/lib/types/next-auth.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts",
    "src/app/api/auth/[...nextauth]/route",
    "src/app/layout.jsx",
    "src/app/page.tsx",
    "src/utils/tooltip.js",
    "src/utils/passwordValidation.js",
    "src/components/navbar.jsx",
    "src/components/header/index.jsx",
    "src/components/header/container.jsx",
    "src/components/header/authentication.jsx",
    "src/components/header/emailConfirmModal.js",
    "src/components/footer.tsx",
    "src/components/slider.jsx",
    "src/components/giveaways/components/ticketsGiveawayModal.tsx",
    "src/components/footer/components/shareModal.tsx",
    "src/components/lottery/components/ticketsLotteryModal.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
